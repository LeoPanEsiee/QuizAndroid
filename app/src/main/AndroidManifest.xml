<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.courstest1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/quizz_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/quizz_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoursTest1">
        <activity
            android:name=".controller.GameActivity"
            android:exported="false"/>

        <activity
            android:name=".controller.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CoursTest1.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".model.ReminderBroadcast"/>

    </application>

</manifest>